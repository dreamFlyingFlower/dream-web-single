<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dream.system.mapper.OrgMapper">

	<resultMap id="BaseResultMap" type="com.dream.system.entity.OrgEntity">
		<id column="id" jdbcType="BIGINT" property="id" />
		<result column="org_code" jdbcType="VARCHAR" property="orgCode" />
		<result column="org_name" jdbcType="VARCHAR" property="orgName" />
		<result column="pid" jdbcType="BIGINT" property="pid" />
		<result column="org_level" jdbcType="VARCHAR" property="orgLevel" />
		<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
		<result column="create_user" jdbcType="BIGINT" property="createUser" />
		<result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
		<result column="update_user" jdbcType="BIGINT" property="updateUser" />
	</resultMap>

	<sql id="BaseColumnList">
		a.id, a.org_code, a.org_name, a.pid, a.org_level, a.create_time, a.create_user, a.update_time,
		a.update_user
	</sql>

	<select id="list" resultMap="BaseResultMap">
		SELECT
		<include refid="BaseColumnList" />
		FROM sys_org a
		<where>
			<if test="query.id != null and query.id != ''">
				AND a.id = #{query.id, jdbcType=BIGINT }
			</if>
			<if test="query.orgCode != null and query.orgCode != ''">
				AND a.org_code = #{query.orgCode, jdbcType=VARCHAR }
			</if>
			<if test="query.orgName != null and query.orgName != ''">
				AND a.org_name = #{query.orgName, jdbcType=VARCHAR }
			</if>
			<if test="query.pid != null and query.pid != ''">
				AND a.pid = #{query.pid, jdbcType=BIGINT }
			</if>
			<if test="query.orgLevel != null and query.orgLevel != ''">
				AND a.org_level = #{query.orgLevel, jdbcType=VARCHAR }
			</if>
		</where>
		ORDER BY a.id DESC
	</select>

	<select id="getList" resultType="com.dream.system.entity.OrgEntity">
		SELECT b.*, (SELECT b.name FROM sys_org b WHERE b.id = a.pid) parentName
		FROM
		sys_org a WHERE a.deleted = 0
		ORDER BY a.sort ASC
	</select>

	<select id="getIdAndPidList" resultType="com.dream.system.entity.OrgEntity">
		SELECT a.id, a.pid FROM sys_org a WHERE a.deleted = 0
	</select>

</mapper>