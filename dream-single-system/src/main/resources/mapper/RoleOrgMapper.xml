<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dream.system.mapper.RoleOrgMapper">

	<resultMap id="BaseResultMap" type="com.dream.system.entity.RoleOrgEntity">
		<id column="id" jdbcType="BIGINT" property="id" />
		<result column="role_id" jdbcType="VARCHAR" property="roleId" />
		<result column="org_id" jdbcType="VARCHAR" property="orgId" />
		<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
		<result column="create_user" jdbcType="BIGINT" property="createUser" />
		<result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
		<result column="update_user" jdbcType="BIGINT" property="updateUser" />
	</resultMap>

	<sql id="BaseColumnList">
		a.id, a.role_id, a.org_id, a.create_time, a.create_user, a.update_time, a.update_user
	</sql>

	<select id="list" resultMap="BaseResultMap">
		SELECT
		<include refid="BaseColumnList" />
		FROM sys_role_org a
		<where>
			<if test="query.id != null and query.id != ''">
				AND a.id = #{query.id, jdbcType=BIGINT }
			</if>
			<if test="query.roleId != null and query.roleId != ''">
				AND a.role_id = #{query.roleId, jdbcType=BIGINT }
			</if>
			<if test="query.orgId != null and query.orgId != ''">
				AND a.org_id = #{query.orgId, jdbcType=BIGINT }
			</if>
		</where>
		ORDER BY a.id DESC
	</select>

	<select id="getDataScopeList" resultType="long">
		SELECT t2.org_id FROM sys_user_role t1, sys_role_org t2
		WHERE t1.user_id = #{userId} AND t1.role_id = t2.role_id AND t1.deleted = 0 AND t2.deleted = 0
	</select>
</mapper>